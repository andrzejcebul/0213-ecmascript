{
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": "*.js",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.css",
      "options": {
        "singleQuote": false,
        "parser": "scss"
      }
    },
    {
      "files": ".html",
      "options": {
        "parser": "angular",
        "htmlWhitespaceSensitivity": "css"
      }
    }
  ]
}
